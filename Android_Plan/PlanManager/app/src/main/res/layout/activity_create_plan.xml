<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.root.planmanager.CreatePlan"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/t_plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:text="任务名称:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/e_plan_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/e_plan_name"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/t_planinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_planinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="任务详情:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/e_planinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_plan_name" />

    <EditText
        android:id="@+id/e_planinfo"
        android:layout_width="354dp"
        android:layout_height="450dp"
        android:minLines="15"
        android:inputType="textMultiLine"
        android:gravity="top"
        app:layout_constraintLeft_toLeftOf="@id/t_planinfo"
        app:layout_constraintTop_toBottomOf="@id/t_planinfo" />
    <Button
        android:id="@+id/btn_createplan"
        android:layout_width="354dp"
        android:layout_height="43dp"
        android:text="创建"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20px"
        />




</android.support.constraint.ConstraintLayout>
